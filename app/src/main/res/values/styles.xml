<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorForeground">@color/color5a9fc3</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlActivated">@color/color5a9fc3</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
    </style>


    <style name="FontFzsong">
        <item name="fontPath">fzsong3.ttf</item>
    </style>

    <style name="FontFzsong.TitleBar" parent="@style/FontFzsong">
        <item name="android:textSize">@dimen/dp17</item>
    </style>

    <style name="FontFzsong.TitleBar.Black" parent="@style/FontFzsong.TitleBar">
        <item name="android:textColor">@color/black</item>
    </style>

    <dimen name="dp17">17dp</dimen>
</resources>
