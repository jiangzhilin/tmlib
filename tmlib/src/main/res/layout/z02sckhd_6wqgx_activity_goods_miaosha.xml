<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">
                <com.youth.banner.Banner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/banner"></com.youth.banner.Banner>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_title_bar"
                        android:orientation="vertical">
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="20dp"
                            android:background="@mipmap/z02sckhd_6wqgx_icon_back_cir"/>
                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/z02sckhd_6wqgx_icon_share_cir"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/colorWhite">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="28px"
                        android:textColor="#444"
                        android:textStyle="bold"
                        android:text="商品名"/>
                    <TextView
                        android:id="@+id/tv_goods_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="24px"
                        android:textColor="#666"
                        android:text="商品简介"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLightGrey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1.5">
                    <TextView
                        android:id="@+id/tv_ac_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24px"
                        android:textColor="#999"
                        android:text="秒杀数量：0件"/>
                    <TextView
                        android:id="@+id/tv_shengyu_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24px"
                        android:textColor="#999"
                        android:layout_marginLeft="20dp"
                        android:text="剩余宝贝：0件"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLightGrey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1.5">
                    <TextView
                        android:id="@+id/tv_price_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24px"
                        android:textColor="#ff5029"
                        android:text="秒杀价 "/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32px"
                        android:textColor="#ff5029"
                        android:textStyle="bold"
                        android:text="0"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_yuanjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:layout_centerInParent="true"
                            android:text="原价 0"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical|right"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#444"
                                android:text="剩余"/>

                            <TextView
                                android:id="@+id/tv_xianshi_time_h_1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="00"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp"
                                android:background="@mipmap/z02sckhd_6wqgx_icon_time_bg"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#444"
                                android:layout_marginLeft="5dp"
                                android:text=":"/>
                            <TextView
                                android:id="@+id/tv_xianshi_time_m_1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="00"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp"
                                android:background="@mipmap/z02sckhd_6wqgx_icon_time_bg"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#444"
                                android:layout_marginLeft="5dp"
                                android:text=":"/>
                            <TextView
                                android:id="@+id/tv_xianshi_time_s_1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="00"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="10sp"
                                android:background="@mipmap/z02sckhd_6wqgx_icon_time_bg"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:orientation="vertical"
                android:layout_marginTop="12px"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/colorWhite">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="24px"
                        android:textColor="#444"
                        android:text="购买商品可获得积分"/>
                    <TextView
                        android:id="@+id/tv_jifen_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff502a"
                        android:text="0"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLightGrey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="24px"
                        android:textColor="#444"
                        android:text="购买商品可使用积分"/>
                    <TextView
                        android:id="@+id/tv_shiyongjifen_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff502a"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20px"
                android:background="@color/colorWhite"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="99px"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:textColor="#444"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:text="商品评价"/>
                    <TextView
                        android:id="@+id/tv_show_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24px"
                        android:textColor="#ff5863"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_all"
                        android:layout_marginRight="5dp"
                        android:text="查看全部"/>
                    <ImageView
                        android:id="@+id/iv_all"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/z02sckhd_6wqgx_icon_arrow"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLightGrey"/>
                <com.liuge.z02sckhd_6wqgx.view.NoScroListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#f0f0f0"
                    android:focusable="false"
                    android:id="@+id/list_pinglun"></com.liuge.z02sckhd_6wqgx.view.NoScroListView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20px"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@color/colorWhite">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="99px"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:textColor="#444"
                        android:layout_marginLeft="5dp"
                        android:text="商品详情"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorLightGrey"/>
                <com.liuge.z02sckhd_6wqgx.view.NoScroListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:id="@+id/list_details"></com.liuge.z02sckhd_6wqgx.view.NoScroListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:orientation="horizontal"
        android:background="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:id="@+id/ll_into_mall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="34px"
                    android:layout_height="34px"
                    android:background="@mipmap/z02sckhd_6wqgx_icon_dianpu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="#666"
                    android:text="店铺"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_into_kefu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="34px"
                    android:layout_height="34px"
                    android:background="@mipmap/z02sckhd_6wqgx_icon_kefu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="#666"
                    android:text="客服"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_collect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="34px"
                    android:layout_height="34px"
                    android:background="@mipmap/z02sckhd_6wqgx_icon_uncollect"/>
                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="#666"
                    android:text="收藏"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_add_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff9000"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="30px"
                android:textStyle="bold"
                android:text="加入购物车"/>
            <TextView
                android:id="@+id/tv_to_buy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff5029"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="30px"
                android:textStyle="bold"
                android:text="立即购买"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>